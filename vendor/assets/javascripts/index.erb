<% content_for :head do %>
    <%= stylesheet_link_tag "project", :media => "all" %>
<% end %>

<% content_for :title do %>
	<!--My projects-->
   <span data-translate="my_projects">My projects</span>
<% end %>

<% content_for :title_right do %>
    <a href="{% url 'project_create' %}">
    <%= link_to new_project_path do %>
	<div id="project-create">
        <span class="glyphicon glyphicon-plus"></span>
        <span data-translate="project_add">add new project</span>
    </div>
    <% end %>
<% end %>

<ul id="projects-list" class="main-panel-content">
    <%# TODO separate template %>
     <% @projects.each do |project| %>
        <%= link_to project_path(project) do %>
        <li class="projects-list-item">
            <h2><%= project.name %></h2>
            <%# TODO <%= project.description|slice:":40" %>
            <span><%= project.description %></span>
            <b><%= project.complete %>% complete</b>
        </li>
        <% end %>
    <% end %>
</ul>
